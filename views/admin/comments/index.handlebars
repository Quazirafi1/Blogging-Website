<div class="row">
    <div class="container">
        <div class="col-md-10">
            <table class="table table-bordered text-center text-white">
                <thead class="bg-dark">
                <tr>
                    <th>Id</th>
                    <th>Publisher</th>
                    <th>Approve Comments</th>
                    <th>Date</th>
                    <th>Comment Body</th>
                    <th>Action</th>
                </tr>
                </thead>

                <tbody class="text-dark">
                {{#each comments}}
                    <tr>
                        <td>{{id}}</td>
                        <td style="width: auto;">{{user.firstName}} {{user.lastName}}</td>
                        <td><input type="checkbox" name="approveComments" class="approveComments" data-buttonid="{{id}}" {{#if commentIsApproved}}checked="checked"{{/if}} /></td>
                        <td>{{date}}</td>
                        <td>{{body}}</td>
                        <td class="d-flex justify-content-center">
                            <form action="/admin/comment/delete/{{_id}}?newMethod=DELETE" method="post">
                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>

                {{/each}}
                </tbody>


            </table>
        </div>
    </div>
</div>
